{
  "name": "o2-easymde",
  "version": "0.0.1",
  "description": "A simple, beautiful, and embeddable JavaScript Markdown editor that easy to use. Features include autosaving and spell checking.",
  "files": [
    "dist/**/*",
    "src/**/*",
    "types/easymde.d.ts"
  ],
  "keywords": [
    "embeddable",
    "markdown",
    "editor",
    "javascript",
    "fontawesome"
  ],
  "main": "src/js/easymde.js",
  "types": "types/easymde.d.ts",
  "license": "MIT",
  "author": "Jeroen Akkerman",
  "dependencies": {
    "codemirror": "^5.58.3",
    "codemirror-spell-checker": "1.1.2",
    "marked": "^1.2.6"
  },
  "devDependencies": {
    "@types/codemirror": "0.0.102",
    "@types/marked": "^1.2.1",
    "browserify": "^17.0.0",
    "gulp": "^4.0.2",
    "gulp-clean-css": "^4.2.0",
    "gulp-concat": "^2.6.1",
    "gulp-eslint": "^6.0.0",
    "gulp-header": "^2.0.9",
    "gulp-rename": "^2.0.0",
    "gulp-terser": "^2.0.0",
    "gulp-uglify": "^3.0.2",
    "typescript": "^4.1.3",
    "vinyl-buffer": "^1.0.0",
    "vinyl-source-stream": "^2.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/XHFkindergarten/o2-easymde.git"
  },
  "scripts": {
    "prepare": "gulp",
    "test": "npm run lint && npm run test:types",
    "lint": "gulp lint",
    "test:types": "tsc --project types/tsconfig.json"
  },
  "bugs": {
    "url": "https://github.com/Ionaru/easy-markdown-editor/issues"
  },
  "homepage": "https://github.com/Ionaru/easy-markdown-editor#readme",
  "directories": {
    "example": "example"
  }
}
